---
interface TeamMember {
  name: string;
  role: string;
  image: string;
  bio: string;
}

const team: TeamMember[] = [
  {
    name: "Pranav Modi",
    role: "CEO & Founder",
    image: "/team/pp5.png",
    bio: "Former AI / ML consultant at Mckinsey & Company with 10+ years of experience in AI and Machine Learning."
  }
];
---

<section class="py-20 bg-gradient-to-b from-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary">
        Meet Our Team
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Led by industry expert with decades of expertise in AI and machine learning
      </p>
    </div>
    
    <div class="flex justify-center">
      <div class="max-w-sm">
        {team.map(member => (
          <div class="glass-card p-6 rounded-xl text-center hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <img
              src={member.image}
              alt={member.name}
              class="w-48 h-48 rounded-full mx-auto mb-6 object-cover object-[center_30%] translate-y-0 ring-4 ring-primary/10"
            />
            <h3 class="text-xl font-semibold mb-2">{member.name}</h3>
            <p class="text-primary mb-4">{member.role}</p>
            <p class="text-gray-600 text-sm">{member.bio}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>