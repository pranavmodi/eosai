---
interface TeamMember {
  name: string;
  role: string;
  image: string;
  bio: string;
}

const team: TeamMember[] = [
  {
    name: "Dr. Sarah Chen",
    role: "CEO & Founder",
    image: "/team/sarah-chen.jpg",
    bio: "Former AI Research Lead at Tech Giants with 15+ years of experience in AI and Machine Learning."
  },
  {
    name: "Michael Rodriguez",
    role: "CTO",
    image: "/team/michael-rodriguez.jpg",
    bio: "Pioneering AI architect with expertise in developing scalable AI solutions for enterprise."
  },
  {
    name: "Dr. Emily Watson",
    role: "Head of Research",
    image: "/team/emily-watson.jpg",
    bio: "PhD in Machine Learning, leading breakthrough research in neural networks and deep learning."
  },
  {
    name: "James Kim",
    role: "Head of AI Implementation",
    image: "/team/james-kim.jpg",
    bio: "Expert in translating complex AI solutions into practical business applications."
  }
];
---

<section class="py-20 bg-gradient-to-b from-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary">
        Meet Our Team
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Led by industry experts with decades of combined experience in AI and machine learning
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {team.map(member => (
        <div class="glass-card p-6 rounded-xl text-center hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
          <img
            src={member.image}
            alt={member.name}
            class="w-32 h-32 rounded-full mx-auto mb-6 object-cover ring-4 ring-primary/10"
          />
          <h3 class="text-xl font-semibold mb-2">{member.name}</h3>
          <p class="text-primary mb-4">{member.role}</p>
          <p class="text-gray-600 text-sm">{member.bio}</p>
        </div>
      ))}
    </div>
  </div>
</section>