---
interface Props {
  name: string;
  role: string;
  company: string;
  content: string;
  image: string;
}

const { name, role, company, content, image } = Astro.props;
---

<div class="glass-card p-8 rounded-2xl">
  <div class="flex items-center mb-6">
    <img
      src={image}
      alt={name}
      class="w-14 h-14 rounded-full object-cover mr-4 ring-4 ring-primary/10"
    />
    <div>
      <h4 class="font-semibold text-lg text-gray-900">{name}</h4>
      <p class="text-primary">{role} at {company}</p>
    </div>
  </div>
  <blockquote class="text-gray-600 leading-relaxed relative">
    <span class="text-5xl text-primary/10 absolute -top-4 -left-2">"</span>
    {content}
  </blockquote>
</div>