---
interface Props {
  categories: string[];
  activeCategory?: string;
}

const { categories, activeCategory = 'All' } = Astro.props;
---

<div class="flex flex-wrap gap-3 justify-center mb-16">
  <a
    href="/blog"
    class={`px-6 py-2.5 rounded-full text-sm font-medium transition-all duration-300 ${
      activeCategory === 'All'
        ? 'bg-primary text-white shadow-lg shadow-primary/25'
        : 'bg-white/80 text-gray-700 hover:bg-primary hover:text-white backdrop-blur-sm'
    }`}
  >
    All
  </a>
  {categories.map(category => (
    <a
      href={`/blog/category/${category.toLowerCase()}`}
      class={`px-6 py-2.5 rounded-full text-sm font-medium transition-all duration-300 ${
        activeCategory === category
          ? 'bg-primary text-white shadow-lg shadow-primary/25'
          : 'bg-white/80 text-gray-700 hover:bg-primary hover:text-white backdrop-blur-sm'
      }`}
    >
      {category}
    </a>
  ))}
</div>