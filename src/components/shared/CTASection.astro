---
interface Props {
  title?: string;
  description?: string;
  primaryButtonText?: string;
  secondaryButtonText?: string;
  primaryButtonLink?: string;
  secondaryButtonLink?: string;
}

const {
  title = "Ready to Transform Your Business?",
  description = "Let's discuss how our AI solutions can drive innovation and growth for your organization",
  primaryButtonText = "Schedule a Consultation",
  secondaryButtonText = "Explore Services",
  primaryButtonLink = "/contact",
  secondaryButtonLink = "#services"
} = Astro.props;
---

<section class="py-24 relative overflow-hidden bg-gradient-to-br from-primary to-secondary">
  <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-10"></div>
  <div class="absolute inset-0 bg-gradient-to-b from-black/0 via-black/5 to-black/10"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center">
      <h2 class="text-5xl font-bold text-white mb-6 drop-shadow-sm">
        {title}
      </h2>
      <p class="text-xl text-white/90 mb-12 max-w-2xl mx-auto leading-relaxed">
        {description}
      </p>
      <div class="flex justify-center space-x-6">
        <a
          href={primaryButtonLink}
          class="px-8 py-4 bg-white hover:bg-gray-50 text-primary font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5"
        >
          {primaryButtonText}
        </a>
        <a
          href={secondaryButtonLink}
          class="px-8 py-4 bg-black/10 hover:bg-black/20 text-white font-semibold rounded-lg backdrop-blur-sm transition-all duration-300"
        >
          {secondaryButtonText}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    background-size: cover;
    background-position: center;
  }
</style> 