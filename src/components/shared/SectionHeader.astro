---
interface Props {
  title: string;
  subtitle: string;
  alignment?: 'left' | 'center';
}

const { title, subtitle, alignment = 'center' } = Astro.props;
---

<div class={`max-w-3xl ${alignment === 'center' ? 'mx-auto text-center' : ''}`}>
  <h2 class="text-4xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary">
    {title}
  </h2>
  <p class="text-xl text-gray-600 leading-relaxed">
    {subtitle}
  </p>
</div>