---
interface Props {
  title: string;
  subtitle?: string;
  alignment?: 'left' | 'center';
  gradient?: boolean;
}

const { 
  title, 
  subtitle, 
  alignment = 'center',
  gradient = false 
} = Astro.props;

const titleClasses = [
  'text-4xl font-bold mb-4',
  gradient ? 'bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary' : '',
];

const containerClasses = [
  'max-w-3xl',
  alignment === 'center' ? 'mx-auto text-center' : ''
];
---

<div class:list={containerClasses}>
  <h2 class:list={titleClasses}>
    {title}
  </h2>
  {subtitle && (
    <p class="text-xl text-gray-600 leading-relaxed">
      {subtitle}
    </p>
  )}
</div>