---
const navItems = [
  { text: 'Home', href: '/' },
  { text: 'Features', href: '/#features' },
  { text: 'Pricing', href: '/#pricing' },
  { text: 'Reports', href: '/reports' },
  { text: 'Blog', href: '/#blog' },
  { text: 'Contact', href: '/contact' },
];

const toolsDropdown = [
  { text: 'Agent Readiness Audit', href: '/agent-readiness-audit' },
  { text: 'AI Pre-Flight Checklist', href: '/ai-preflight-checklist' },
];
---

<header class="bg-white shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-primary">Possible Minds</a>
      </div>
      <div class="hidden sm:flex sm:items-center">
        {navItems.map(item => (
          <a
            href={item.href}
            class="ml-8 text-gray-700 hover:text-primary transition-colors"
          >
            {item.text}
          </a>
        ))}
        
        <!-- Tools Dropdown -->
        <div class="ml-8 relative group">
          <button class="text-gray-700 hover:text-primary transition-colors flex items-center">
            Tools
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          
          <!-- Dropdown Menu -->
          <div class="absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-1" role="menu">
              {toolsDropdown.map(item => (
                <a
                  href={item.href}
                  class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary transition-colors"
                  role="menuitem"
                >
                  {item.text}
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>