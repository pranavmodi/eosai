---
import FormInput from './FormInput.astro';
import FormTextarea from './FormTextarea.astro';
---

<div class="glass-card p-8 rounded-2xl">
  <h2 class="text-4xl font-bold mb-8 text-center bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">Start saving time and resources with our chatbot</h2>
  <form class="space-y-6" method="POST" name="contact" data-netlify="true" action="/thank-you/">
    <div class="grid md:grid-cols-2 gap-6">
      <FormInput
        label="First Name"
        name="firstName"
        type="text"
        placeholder="John"
        required
      />
      <FormInput
        label="Last Name"
        name="lastName"
        type="text"
        placeholder="Doe"
        required
      />
    </div>
    <FormInput
      label="Email"
      name="email"
      type="email"
      placeholder="john@example.com"
      required
    />
    <FormInput
      label="Company"
      name="company"
      type="text"
      placeholder="Your Company"
    />
    <FormTextarea
      label="Message"
      name="message"
      placeholder="Tell us about your project..."
      required
    />
    <button
      type="submit"
      class="w-full bg-primary text-white py-4 px-8 rounded-xl font-semibold hover:bg-primary/90 transition-colors shadow-lg shadow-primary/25 hover:shadow-xl"
    >
      Send Message
    </button>
  </form>
</div>