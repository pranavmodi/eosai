---
const contactMethods = [
  {
    icon: 'location_on',
    title: 'Visit Us',
    details: ['123 AI Street', 'Tech City, TC 12345', 'United States']
  },
  {
    icon: 'phone',
    title: 'Call Us',
    details: ['+1 (555) 123-4567', 'Mon-Fri 9AM-6PM EST']
  },
  {
    icon: 'mail',
    title: 'Email Us',
    details: ['contact@ainexus.com', 'support@ainexus.com']
  }
];
---

<div class="lg:pl-8">
  <h2 class="text-2xl font-semibold mb-8">Contact Information</h2>
  <div class="space-y-8">
    {contactMethods.map(method => (
      <div class="flex items-start">
        <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mr-4">
          <span class="material-icons text-primary">{method.icon}</span>
        </div>
        <div>
          <h3 class="font-semibold text-lg mb-2">{method.title}</h3>
          <div class="space-y-1">
            {method.details.map(detail => (
              <p class="text-gray-600">{detail}</p>
            ))}
          </div>
        </div>
      </div>
    ))}
  </div>

  <div class="mt-12">
    <h3 class="font-semibold text-lg mb-4">Follow Us</h3>
    <div class="flex space-x-4">
      <a href="#" class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center hover:bg-primary/20 transition-colors">
        <span class="material-icons text-primary">facebook</span>
      </a>
      <a href="#" class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center hover:bg-primary/20 transition-colors">
        <span class="material-icons text-primary">twitter</span>
      </a>
      <a href="#" class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center hover:bg-primary/20 transition-colors">
        <span class="material-icons text-primary">linkedin</span>
      </a>
    </div>
  </div>
</div>