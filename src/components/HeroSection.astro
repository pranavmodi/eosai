---
import HeroText from './hero/HeroText.astro';
import HeroIllustration from './hero/HeroIllustration.astro';
---

<section class="relative min-h-[90vh] flex items-center bg-mesh overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-transparent to-white/10"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <HeroText />
      <HeroIllustration />
    </div>
  </div>
</section>