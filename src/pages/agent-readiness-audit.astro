---
import Header from '../components/Header.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>AI Readiness Assessment - Possible Minds</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Animated background gradient */
    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    .bg-animated-gradient {
      background: linear-gradient(270deg, #1e293b, #0f172a, #1e293b);
      background-size: 600% 600%;
      animation: gradientShift 12s ease infinite;
    }

    /* Glassmorphism card */
    .glass-card {
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(14px);
      border: 1px solid rgba(226, 232, 240, 0.5);
      border-radius: 1.5rem;
      box-shadow: 0 10px 40px rgba(0,0,0,0.05);
    }

    /* Question number circle */
    .question-number {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 3.5rem;
      height: 3.5rem;
      background: linear-gradient(135deg, #2563eb, #4f46e5);
      color: white;
      border-radius: 50%;
      font-size: 1.25rem;
      font-weight: 700;
      box-shadow: 0 6px 20px rgba(79, 70, 229, 0.3);
      flex-shrink: 0;
    }

    /* Progress bar */
    .progress-bar {
      position: relative;
      height: 1.25rem;
      background: rgba(255,255,255,0.2);
      border-radius: 9999px;
      overflow: hidden;
    }
    .progress-fill {
      height: 100%;
      background: linear-gradient(to right, #2563eb, #9333ea);
      border-radius: 9999px;
      transition: width 0.4s ease;
    }
    .progress-percent {
      position: absolute;
      top: 0;
      left: 50%;
      transform: translateX(-50%);
      font-size: 0.75rem;
      font-weight: bold;
      color: white;
    }

    /* Score pulse animation */
    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }
    .score-circle {
      width: 8rem;
      height: 8rem;
      background: linear-gradient(135deg, #2563eb, #9333ea);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 2rem;
      font-weight: 800;
      animation: pulse 1.5s infinite;
      box-shadow: 0 0 30px rgba(79, 70, 229, 0.4);
    }
  </style>
</head>
<body class="bg-animated-gradient min-h-screen text-gray-900">

  <Header />

  <!-- Page Header -->
  <div class="py-16 text-center text-white">
    <div class="max-w-4xl mx-auto px-4">
      <div class="inline-flex items-center justify-center px-4 py-2 bg-blue-600/10 border border-blue-500/20 rounded-full mb-6">
        <svg class="w-4 h-4 text-blue-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
        </svg>
        <span class="text-blue-400 text-sm font-medium">STRATEGIC ASSESSMENT</span>
      </div>
      <h1 class="text-5xl md:text-6xl font-bold mb-6 tracking-tight">
        Agent Readiness
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-400">Scorecard</span>
      </h1>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto leading-relaxed">
        Evaluate your organization's preparedness for AI agent integration with our comprehensive readiness assessment framework
      </p>
    </div>
  </div>

  <!-- Progress Bar -->
  <div class="max-w-4xl mx-auto px-4 mb-8">
    <div class="progress-bar">
      <div class="progress-fill" id="progressFill" style="width: 0%"></div>
      <div class="progress-percent" id="progressPercent">0%</div>
    </div>
  </div>

  <!-- Quiz Form -->
  <form id="quiz-form" class="max-w-4xl mx-auto space-y-8 px-4">
         <!-- Question 1 -->
     <div class="glass-card p-6 flex items-start gap-4">
       <div class="question-number">1</div>
       <div class="flex-1">
         <h2 class="text-xl font-semibold">Do you have a clearly defined AI strategy?</h2>
         <div class="mt-4 space-y-2">
           <label class="block">
             <input type="radio" name="q1" value="1" class="mr-2"> Not yet
           </label>
           <label class="block">
             <input type="radio" name="q1" value="2" class="mr-2"> Somewhat
           </label>
           <label class="block">
             <input type="radio" name="q1" value="3" class="mr-2"> Fully defined
           </label>
         </div>
       </div>
     </div>

     <!-- Question 2 -->
     <div class="glass-card p-6 flex items-start gap-4">
       <div class="question-number">2</div>
       <div class="flex-1">
         <h2 class="text-xl font-semibold">How would you describe your company's data collection and organization?</h2>
         <div class="mt-4 space-y-2">
           <label class="block">
             <input type="radio" name="q2" value="1" class="mr-2"> Highly organized and centralized with structured databases
           </label>
           <label class="block">
             <input type="radio" name="q2" value="2" class="mr-2"> Somewhat organized across different systems
           </label>
           <label class="block">
             <input type="radio" name="q2" value="3" class="mr-2"> Loosely organized, mostly in spreadsheets
           </label>
         </div>
       </div>
     </div>

     <!-- Question 3 -->
     <div class="glass-card p-6 flex items-start gap-4">
       <div class="question-number">3</div>
       <div class="flex-1">
         <h2 class="text-xl font-semibold">How well-defined are your business workflows and processes?</h2>
         <div class="mt-4 space-y-2">
           <label class="block">
             <input type="radio" name="q3" value="1" class="mr-2"> Extensively documented with clear SOPs
           </label>
           <label class="block">
             <input type="radio" name="q3" value="2" class="mr-2"> Well-defined in most areas but execution varies
           </label>
           <label class="block">
             <input type="radio" name="q3" value="3" class="mr-2"> Basic workflows exist but lack documentation
           </label>
         </div>
       </div>
     </div>

     <!-- Question 4 -->
     <div class="glass-card p-6 flex items-start gap-4">
       <div class="question-number">4</div>
       <div class="flex-1">
         <h2 class="text-xl font-semibold">What is your team's readiness for technology adoption?</h2>
         <div class="mt-4 space-y-2">
           <label class="block">
             <input type="radio" name="q4" value="1" class="mr-2"> Highly receptive with strong change management
           </label>
           <label class="block">
             <input type="radio" name="q4" value="2" class="mr-2"> Generally open with some resistance
           </label>
           <label class="block">
             <input type="radio" name="q4" value="3" class="mr-2"> Mixed reactions with significant resistance
           </label>
         </div>
       </div>
      </div>

       <!-- Question 5 -->
     <div class="glass-card p-6 flex items-start gap-4">
       <div class="question-number">5</div>
       <div class="flex-1">
         <h2 class="text-xl font-semibold">How would you assess your current IT infrastructure?</h2>
         <div class="mt-4 space-y-2">
           <label class="block">
             <input type="radio" name="q5" value="1" class="mr-2"> Modern, cloud-native with APIs
           </label>
           <label class="block">
             <input type="radio" name="q5" value="2" class="mr-2"> Hybrid environment with modern and legacy systems
           </label>
           <label class="block">
             <input type="radio" name="q5" value="3" class="mr-2"> Primarily on-premise with limited integration
           </label>
         </div>
       </div>
     </div>

     <!-- Question 6 -->
     <div class="glass-card p-6 flex items-start gap-4">
       <div class="question-number">6</div>
       <div class="flex-1">
         <h2 class="text-xl font-semibold">What is your budget allocation for AI initiatives?</h2>
         <div class="mt-4 space-y-2">
           <label class="block">
             <input type="radio" name="q6" value="1" class="mr-2"> Dedicated budget with clear ROI expectations
           </label>
           <label class="block">
             <input type="radio" name="q6" value="2" class="mr-2"> Flexible budget based on demonstrated value
           </label>
           <label class="block">
             <input type="radio" name="q6" value="3" class="mr-2"> Limited budget requiring strong justification
           </label>
         </div>
       </div>
     </div>

     <!-- Question 7 -->
     <div class="glass-card p-6 flex items-start gap-4">
       <div class="question-number">7</div>
       <div class="flex-1">
         <h2 class="text-xl font-semibold">How mature is your data governance framework?</h2>
         <div class="mt-4 space-y-2">
           <label class="block">
             <input type="radio" name="q7" value="1" class="mr-2"> Comprehensive with clear policies and enforcement
           </label>
           <label class="block">
             <input type="radio" name="q7" value="2" class="mr-2"> Basic framework with some policies in place
           </label>
           <label class="block">
             <input type="radio" name="q7" value="3" class="mr-2"> Minimal governance, mostly ad-hoc
           </label>
         </div>
       </div>
     </div>

     <!-- Question 8 -->
     <div class="glass-card p-6 flex items-start gap-4">
       <div class="question-number">8</div>
       <div class="flex-1">
         <h2 class="text-xl font-semibold">What is your team's AI and machine learning expertise?</h2>
         <div class="mt-4 space-y-2">
           <label class="block">
             <input type="radio" name="q8" value="1" class="mr-2"> Strong expertise with dedicated AI teams
           </label>
           <label class="block">
             <input type="radio" name="q8" value="2" class="mr-2"> Moderate expertise with some AI knowledge
           </label>
           <label class="block">
             <input type="radio" name="q8" value="3" class="mr-2"> Limited expertise, mostly learning phase
           </label>
         </div>
       </div>
        </div>
      </div>

    <!-- Add more questions here following the same structure -->

    <button type="submit" class="mt-6 w-full py-3 rounded-xl bg-gradient-to-r from-blue-600 to-purple-600 text-white font-bold hover:opacity-90 transition">
      See Results
    </button>
  </form>

  <!-- Results Section -->
  <section id="results" class="hidden max-w-4xl mx-auto mt-10 px-4 text-center text-white">
    <div class="glass-card p-8">
      <div class="score-circle mx-auto mb-6" id="scoreCircle">0%</div>
      <h2 class="text-2xl font-bold mb-4">Your AI Readiness Score</h2>
      <p class="mb-6 opacity-80">Here's how you performed across key dimensions:</p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-left text-gray-900">
        <div class="recommendation-card glass-card p-6">
          <h3 class="font-bold mb-2">Strategy</h3>
          <p class="text-sm text-gray-700">Your strategy is developing — consider aligning AI goals with business objectives.</p>
         </div>
        <div class="recommendation-card glass-card p-6">
          <h3 class="font-bold mb-2">Data Readiness</h3>
          <p class="text-sm text-gray-700">Data governance and quality need attention before scaling AI initiatives.</p>
         </div>
        <div class="recommendation-card glass-card p-6">
          <h3 class="font-bold mb-2">Team Capability</h3>
          <p class="text-sm text-gray-700">Upskilling your team in AI tools will boost adoption and ROI.</p>
         </div>
      </div>
    </div>
  </section>

  <!-- Email Collection Section -->
  <section id="email-collection" class="hidden max-w-2xl mx-auto mt-10 px-4 text-center text-white">
    <div class="glass-card p-8">
      <div class="mb-6">
        <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
          </svg>
        </div>
        <h2 class="text-3xl font-bold mb-4">Get Your Detailed Report</h2>
        <p class="text-lg text-slate-300 mb-6">We'll send your comprehensive AI readiness analysis and personalized recommendations directly to your email.</p>
      </div>

      <form id="email-form" class="space-y-6">
        <div class="text-left">
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            placeholder="Enter your business email"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900"
          >
        </div>
        
        <div class="text-left">
          <label for="company" class="block text-sm font-medium text-gray-700 mb-2">Company Name (Optional)</label>
          <input 
            type="text" 
            id="company" 
            name="company" 
            placeholder="Your company name"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900"
          >
        </div>

        <div class="flex items-start space-x-3 text-left">
          <input type="checkbox" id="newsletter" name="newsletter" class="mt-1">
          <label for="newsletter" class="text-sm text-gray-600">
            I'd like to receive updates about AI readiness insights and industry best practices
          </label>
        </div>

        <button type="submit" class="w-full py-3 px-6 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-lg hover:opacity-90 transition-opacity">
          Send My Report
        </button>
      </form>

      <div class="mt-6 text-sm text-slate-400">
        <p>✓ Your detailed analysis will be sent within 5 minutes</p>
        <p>✓ No spam, unsubscribe anytime</p>
        <p>✓ We respect your privacy</p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-white mt-20 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="text-2xl font-bold text-blue-600 mb-4">Possible Minds</div>
        <p class="text-gray-600 mb-6">Transforming businesses with cutting-edge AI solutions</p>
        <div class="flex justify-center space-x-6">
          <a href="/" class="text-gray-500 hover:text-blue-600 transition-colors">Home</a>
          <a href="/services" class="text-gray-500 hover:text-blue-600 transition-colors">Services</a>
          <a href="/about" class="text-gray-500 hover:text-blue-600 transition-colors">About</a>
          <a href="/contact" class="text-gray-500 hover:text-blue-600 transition-colors">Contact</a>
        </div>
        <div class="mt-6 text-sm text-gray-400">
          © 2024 Possible Minds. All rights reserved.
        </div>
      </div>
    </div>
  </footer>

   <script>
     const form = document.getElementById('quiz-form');
     const progressFill = document.getElementById('progressFill');
     const progressPercent = document.getElementById('progressPercent');
     const scoreCircle = document.getElementById('scoreCircle');
     const resultsSection = document.getElementById('results');
     const emailCollectionSection = document.getElementById('email-collection');
     const emailForm = document.getElementById('email-form');

     const totalQuestions = form.querySelectorAll('.glass-card').length;

     form.addEventListener('change', () => {
       const answered = form.querySelectorAll('input[type="radio"]:checked').length;
       const percent = Math.round((answered / totalQuestions) * 100);
       progressFill.style.width = percent + '%';
       progressPercent.textContent = percent + '%';
     });

     form.addEventListener('submit', (e) => {
       e.preventDefault();
       let score = 0;
       const answers = form.querySelectorAll('input[type="radio"]:checked');
       answers.forEach(a => score += parseInt((a as HTMLInputElement).value));
       const maxScore = totalQuestions * 3;
       const percentScore = Math.round((score / maxScore) * 100);

       scoreCircle.textContent = percentScore + '%';
       form.classList.add('hidden');
       emailCollectionSection.classList.remove('hidden');
     });

     emailForm.addEventListener('submit', (e) => {
       e.preventDefault();
       const email = (document.getElementById('email') as HTMLInputElement).value;
       const company = (document.getElementById('company') as HTMLInputElement).value;
       const newsletter = (document.getElementById('newsletter') as HTMLInputElement).checked;

       // Here you would typically send this data to your backend
       console.log('Email collected:', { email, company, newsletter });
       
       // Show results after email collection
       emailCollectionSection.classList.add('hidden');
       resultsSection.classList.remove('hidden');
       
       // You could also send the email data to your server here
       // fetch('/api/collect-email', {
       //   method: 'POST',
       //   headers: { 'Content-Type': 'application/json' },
       //   body: JSON.stringify({ email, company, newsletter, score: scoreCircle.textContent })
       // });
     });
   </script>

</body>
</html>