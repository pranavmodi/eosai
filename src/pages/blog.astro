---
import Layout from '../layouts/Layout.astro';
import SectionTitle from '../components/shared/SectionTitle.astro';
import BlogCard from '../components/BlogCard.astro';
import CTASection from '../components/shared/CTASection.astro';
import { blogPosts } from '../data/blogPosts';

const posts = blogPosts.sort((a, b) => {
  return new Date(b.date).getTime() - new Date(a.date).getTime();
});
---

<Layout 
  title="Blog & Insights"
  description="Latest insights, trends, and best practices in AI and machine learning"
>
  <div class="py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionTitle
        title="Latest Insights"
        subtitle="Explore our latest thoughts on AI, machine learning, and digital transformation"
        gradient={true}
      />
      
      <div class="mt-16 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {posts.map((post) => (
          <BlogCard {...post} />
        ))}
      </div>
    </div>
  </div>

  <CTASection
    title="Stay Updated with AI Trends"
    description="Subscribe to our newsletter for the latest insights and updates in AI technology"
    primaryButtonText="Subscribe Now"
    primaryButtonLink="/contact#newsletter"
    secondaryButtonText="Contact Us"
    secondaryButtonLink="/contact"
  />
</Layout>