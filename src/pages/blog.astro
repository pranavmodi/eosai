---
import Layout from '../layouts/Layout.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogCard from '../components/BlogCard.astro';
import CategoryFilter from '../components/CategoryFilter.astro';
import { blogPosts, categories } from '../data/blogPosts';
import '../styles/gradients.css';
---

<Layout 
  title="Blog"
  description="Latest insights and trends in AI consulting, machine learning, and digital transformation"
>
  <BlogHeader
    title="AI Insights & Updates"
    description="Stay informed about the latest developments in AI, machine learning, and digital transformation with our expert insights and analysis."
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <CategoryFilter categories={categories} />
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {blogPosts.map(post => (
        <BlogCard {...post} />
      ))}
    </div>

    <div class="flex justify-center pb-16">
      <button class="px-8 py-3.5 rounded-full font-medium bg-primary text-white hover:bg-primary/90 transition-colors shadow-lg shadow-primary/25 hover:shadow-xl hover:shadow-primary/35">
        Load More Articles
      </button>
    </div>
  </div>
</Layout>